
package tugasscanner;

import java.util.Scanner;
public class TugasScanner {

   
    public static void main(String[] args) {
          //OBJEK VARIABEL\\
        String nama;
        String alamat;
        String TTL;
        String saran;
        String email;
        String password;
        int a = 7 ; int b=12; int c=10, total;
        total= a+b-12;
        boolean f=true;
        boolean g=true;
        boolean hasil = f||g ;
        String selamat;
        
         //MEMBUAT OBJEK CLASS SCANNER\\
        Scanner masukkandata = new Scanner (System.in);
        System.out.println("JANGAN NGUTANG!!");
        System.out.println("=============================");
        System.out.println("##====>>Login pendaftaran Keanggotan Nayss6_cafe<<====##");
        
       
        System.out.print("Nama Lengkap anda? :");
        nama = masukkandata.nextLine();
       
        System.out.print("Alamat anda saat ini? :");
        alamat = masukkandata.nextLine();
        
   
        System.out.print("tempat lahir anda? :");
        TTL = masukkandata.nextLine();
        
        
        System.out.print("saran anda mengenai cafe ini :");
        saran = masukkandata.nextLine();
        
     
        System.out.print("email keanggotaan:");
        email = masukkandata.nextLine();
        
        
        System.out.print("password : ");
        password = masukkandata.nextLine();
        
        
        System.out.print("tentukan hasil dari 7+12-10 : ");
        total = masukkandata.nextInt();   
       
        
        System.out.print("true atau false kalau hujan itu air? : ");
        hasil = masukkandata.nextBoolean();
        
        System.out.print("selamat bergabung eaa gayn >,<");
        selamat = masukkandata.next();
   
        
        
        
        
        //>>MENAMPILKAN SEMUA INPUTAN USER<<\\
        System.out.println(".......><......");
        System.out.println("Nama Anggota =  " + nama);
        System.out.println("alamat anda saat ini =  " + alamat);
        System.out.println("tempat lahir anda = " + TTL );
        System.out.println("saran anda mengenai cafe ini : " + saran);
        System.out.println("email keanggotaan = " +email);
        System.out.println("password = " +  password);
        System.out.println("tentukan hasil dari = "+total);
        System.out.println("true atau false kalau hujan itu air? = "+hasil);
        System.out.println("selamat bergabung eaa gayn  >,<= "+selamat);
                
    }   
    
}
